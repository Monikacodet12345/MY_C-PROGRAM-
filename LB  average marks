
#include <stdio.h>
int passed(int m1, int m2, int m3){
    if(m1>=40,m2>=40,m3>=40)
    return 1;
    else return 0;
}

int main() {
    int s1,s2,s3;
    float average;
   printf("enter the marks of s1");
   scanf("%d,&s1");
    printf("enter the marks of s2");
   scanf("%d,&s2");
printf("enter the marks of s3");
   scanf("%d,&s3");
   average=(s1+s2+s3)/3;
   printf("average :%f\n");
   if (passed(s1,s2,s3))
   printf("result:pass\n");
   else
   printf("result:fail\n");

    return 0;
}
